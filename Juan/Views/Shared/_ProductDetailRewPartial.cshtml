@model Review

<form asp-action="AddReviews" asp-controller="Product" method="post" class="review-form">
    <div class="form-group row">
        <div class="col">
            <label asp-for="Name" class="col-form-label"><span class="text-danger">*</span> Your Name</label>
            <input class="form-control" asp-for="Name" required>
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
    </div>
    <div class="form-group row">

        <div class="col">
            <label asp-for="Email" class="col-form-label"><span class="text-danger">*</span> Your Email</label>
            <input class="form-control" asp-for="Email" required>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for="Message" class="col-form-label"><span class="text-danger">*</span> Your Review</label>
            <textarea class="form-control" asp-for="Message" required></textarea>
            <span class="text-danger" asp-validation-for="Message"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label class="col-form-label"><span class="text-danger">*</span> Rating</label>
            &nbsp;&nbsp;&nbsp; Bad&nbsp;
            <input type="radio" value="1" asp-for="Star">
            &nbsp;
            <input type="radio" value="2" asp-for="Star">
            &nbsp;
            <input type="radio" value="3" asp-for="Star">
            &nbsp;
            <input type="radio" value="4" asp-for="Star">
            &nbsp;
            <input type="radio" value="5" asp-for="Star" checked>
            &nbsp;Good
        </div>
        <span class="text-danger" asp-validation-for="Star"></span>
    </div>
    <input type="hidden" value="@Model.ProductId" asp-for="ProductId" />
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="buttons">
        <button class="sqr-btn btn btn-primary" type="submit">Post</button>
    </div>
</form> <!-- end of review-form -->
