
@model Product
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
</div>
<div class="modal-body">
    <!-- product details inner end -->
    <div class="product-details-inner">
        <div class="row">
            <div class="col-lg-5">
                <div class="product-large-slider mb-20">
                    <div class="pro-large-img img-zoom">
                        <img src="~/user/assets/img/product/@Model.MainImage" alt="product thumb" />
                    </div>
                    @foreach (ProductImage productImage in Model.ProductImages)
                    {
                        <div class="pro-large-img img-zoom">
                            <img src="~/user/assets/img/product/@productImage.Image" alt="product thumb" />
                        </div>
                    }


                </div>
                <div class="pro-nav slick-row-5">
                    <div class="pro-nav-thumb">
                        <img src="~/user/assets/img/product/@Model.MainImage" alt="product thumb" />
                    </div>
                    @foreach (ProductImage productImage in Model.ProductImages)
                    {
                        <div class="pro-nav-thumb"><img src="~/user/assets/img/product/@productImage.Image" alt="" /></div>
                    }

                </div>
            </div>
            <div class="col-lg-7">
                <div class="product-details-des">
                    <h3 class="pro-det-title">@Model.Title</h3>
                    <div class="pro-review">
                        <span><a href="#">@Model.Reviews.Where(r => !r.IsDeleted).Count() Review(s)</a></span>
                    </div>
                    <div class="price-box">
                        @if (Model.DiscountPrice != null)
                        {
                            <span class="price-regular">$@Model.DiscountPrice</span>
                            <span class="price-old"><del>$@Model.Price</del></span>
                        }
                        else
                        {
                            <span class="price-regular">$@Model.Price</span>
                        }
                    </div>
                    <p>Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua.</p>
                    <div class="quantity-cart-box row align-items-center mb-20">
                        <form id="basketform" method="get" asp-controller="product" asp-action="AddBasket" asp-route-id="@Model.Id">
                            <div class="quantity mb-2 ">
                                <div class="pro-qty"><input id="productcount" type="text" value="1"></div>
                            </div>
                            <div class="costum d-flex mb-3">
                                <div class="pro-color " style="margin-right:1rem">
                                    <select class="form-control color">
                                        @foreach (ProductColor productColor in Model.ProductColors)
                                        {
                                            <option value="@productColor.Id">@productColor.Color.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="pro-color ">
                                    <select  class="form-control size">
                                        @foreach (ProductSize productSize in Model.productSizes.OrderBy(s => s.Size.Name))
                                        {
                                            <option value="@productSize.Id">@productSize.Size.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="product-add-cart">
                                @if (Model.Count > 0)
                                {
                                    <button   type="submit" class="btn btn-default addbasketbtn">Add to cart</button>
                                }
                                else
                                {
                                    <button disabled="disabled" class="btn btn-default">Add to cart</button>
                                }

                            </div>
                        </form>
                    </div>
                    
                    <div class="availability mb-20">
                        <h5 class="cat-title">Availability:</h5>
                        @if (Model.Count > 0)
                        {
                            <span class="text-success">In Stock</span>
                        }
                        else
                        {
                            <span class="text-danger">Out Stock</span>
                        }

                    </div>
                    <div class="share-icon">
                        <h5 class="cat-title">Share:</h5>
                        <a href="#"><i class="fa fa-facebook"></i></a>
                        <a href="#"><i class="fa fa-twitter"></i></a>
                        <a href="#"><i class="fa fa-pinterest"></i></a>
                        <a href="#"><i class="fa fa-google-plus"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- product details inner end -->
</div>
