@model HomeVM
@{
    ViewData["Title"] = "Index";
}

<!-- main wrapper start -->
<main>
    <!-- hero slider section start -->
    <section class="hero-slider">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="hero-slider-active slick-arrow-style slick-arrow-style_hero slick-dot-style">
                        @foreach (Slider slider in Model.Sliders)
                        {
                            <!-- single slider item start -->
                            <div class="hero-single-slide">
                                <div class="hero-slider-item bg-img" data-bg="user/assets/img/slider/@slider.ImageUrl">
                                    <div class="hero-slider-content slide-1">
                                        <h5 class="slide-subtitle">@slider.SlideSubtitle</h5>
                                        <h2 class="slide-title">@slider.SlideTitle</h2>
                                        <p class="slide-desc">@slider.SlideDesc>
                                        <a href="shop.html" class="btn btn-hero">SHOP NOW</a>
                                    </div>
                                </div>
                            </div>
                            <!-- single slider item end -->
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- hero slider section end -->
    <!-- service features start -->
    <section class="service-policy-area">
        <div class="container">
            <div class="row">
                <!-- single policy item start -->
                <div class="col-lg-4">
                    <div class="service-policy-item mt-30 bg-1">
                        <div class="policy-icon">
                            <img src="~/user/assets/img/icon/policy-1.png" alt="policy icon">
                        </div>
                        <div class="policy-content">
                            <h5 class="policy-title">FREE SHIPPING</h5>
                            <p class="policy-desc">Free shipping on all order</p>
                        </div>
                    </div>
                </div>
                <!-- single policy item start -->
                <!-- single policy item start -->
                <div class="col-lg-4">
                    <div class="service-policy-item mt-30 bg-2">
                        <div class="policy-icon">
                            <img src="~/user/assets/img/icon/policy-2.png" alt="policy icon">
                        </div>
                        <div class="policy-content">
                            <h5 class="policy-title">ONLINE SUPPORT</h5>
                            <p class="policy-desc">Online support 24 hours a day</p>
                        </div>
                    </div>
                </div>
                <!-- single policy item start -->
                <!-- single policy item start -->
                <div class="col-lg-4">
                    <div class="service-policy-item mt-30 bg-3">
                        <div class="policy-icon">
                            <img src="~/user/assets/img/icon/policy-3.png" alt="policy icon">
                        </div>
                        <div class="policy-content">
                            <h5 class="policy-title">MONEY RETURN</h5>
                            <p class="policy-desc">Back guarantee under 5 days</p>
                        </div>
                    </div>
                </div>
                <!-- single policy item start -->
            </div>
        </div>
    </section>
    <!-- service features end -->
    <!-- our product area start -->
    <section class="our-product section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">Our Product</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="product-carousel-4 mbn-50 slick-row-15 slick-arrow-style">
                        @foreach (Product product in Model.Products)
                        {
                            <!-- product single item start -->
                            <div class="product-item mb-50">
                                <div class="product-thumb">
                                    <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.Id">
                                        <img src="~/user/assets/img/product/@product.MainImage" alt="">
                                    </a>
                                </div>
                                <div class="product-content">
                                    <h5 class="product-name">
                                        <a asp-controller="Product" asp-action="ProductDetail" asp-route-id="@product.Id">@product.Title</a>
                                    </h5>
                                    <div class="price-box">
                                        @if (product.DiscountPrice != null)
                                        {
                                            <span class="price-regular">$@product.DiscountPrice</span>
                                            <span class="price-old"><del>$@product.Price</del></span>
                                        }
                                        else
                                        {
                                            <span class="price-regular">$@product.Price</span>
                                        }


                                    </div>
                                    <div class="product-action-link">
                                        <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                        <a class="productdetail" data-toggle="modal" data-target="#productQuickModal" asp-controller="Product" asp-action="DetailModal" asp-route-id="@product.Id">
                                            <span data-toggle="tooltip"
                                                  title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <!-- product single item start -->
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- our product area end -->
    <!-- banner statistic area start -->
    <div class="banner-statistics">
        <div class="container">
            <div class="row no-gutters mtn-30">
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a href="product-details.html">
                            <img src="~/user/assets/img/banner/banner-1.jpg" alt="banner-image">
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">sports shoes</h5>
                            <h3 class="banner-title">20% Off<br>For Sports men</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="img-container mt-30">
                        <a href="product-details.html">
                            <img src="~/user/assets/img/banner/banner-2.jpg" alt="banner-image">
                        </a>
                        <div class="banner-text">
                            <h5 class="banner-subtitle">sports shoes</h5>
                            <h3 class="banner-title">20% Off<br>For Sports men</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- banner statistic area end -->
    <!-- top seller area start -->
    <section class="top-seller-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">top seller</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-4 col-lg-5 col-md-5">
                    <div class="product-banner">
                        <a href="#">
                            <img src="~/user/assets/img/banner/banner-3.jpg" alt="product banner">
                        </a>
                    </div>
                </div>
                <div class="col-xl-8 col-lg-7 col-md-7">
                    <div class="top-seller-carousel slick-row-15 mtn-30">
                        @foreach (Product product in Model.Products)
                        {
                            <!-- product item start -->
                            <div class="slide-item">
                                <div class="pro-item-small mt-30">
                                    <div class="product-thumb">
                                        <a href="product-details.html">
                                            <img src="~/user/assets/img/product/@product.MainImage" alt="">
                                        </a>
                                    </div>
                                    <div class="pro-small-content">
                                        <h6 class="product-name">
                                            <a href="product-details.html">@product.Title</a>
                                        </h6>
                                        <div class="price-box">
                                            @if (product.DiscountPrice != null)
                                            {
                                                <span class="price-regular">$@product.DiscountPrice</span>
                                                <span class="price-old"><del>$@product.Price</del></span>
                                            }
                                            else
                                            {
                                                <span class="price-regular">$@product.Price</span>
                                            }
                                        </div>
                                        <div class="ratings">
                                            
                                            @for (int i = 1; i <=5; i++)
                                            {
                                                if ((product.Reviews != null && product.Reviews.Count() > 0) && i <= (int)Math.Ceiling(product.Reviews.Average(s => s.Star)))
                                                {
                                                    <span><i class="ion-android-star"></i></span>

                                                }
                                                else
                                                {
                                                    <span><i class="ion-android-star-outline"></i></span>

                                                }
                                            }
                                        </div>
                                        <div class="product-link-2">
                                            <a href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                                            <a href="#" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                                            <a class="productdetail" data-toggle="modal" data-target="#productQuickModal" asp-controller="Product" asp-action="DetailModal" asp-route-id="@product.Id">
                                                <span data-toggle="tooltip"
                                                      title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- product item start -->
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- top seller area end -->
    <!-- latest blog area start -->
    <section class="latest-blog-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="section-title text-center">
                        <h2 class="title">our blog</h2>
                        <p class="sub-title">Lorem ipsum dolor sit amet consectetur adipisicing</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="blog-carousel-active slick-row-15">
                        <!-- blog single item start -->
                        @foreach (Blog blog in Model.Blogs)
                        {
                            <div class="blog-post-item">
                                <div class="blog-thumb">
                                    <a href="blog-details.html">
                                        <img src="~/user/assets/img/blog/@blog.ImageUrl" alt="blog thumb">
                                    </a>
                                </div>
                                <div class="blog-content">
                                    <h5 class="blog-title">
                                        <a asp-controller="blog" asp-action="Detail"  asp-route-id="@blog.Id">
                                            @blog.Title
                                        </a>
                                    </h5>
                                    <ul class="blog-meta">
                                        <li><span>By: </span>@blog.AppUser.Name</li>
                                        <li><span>On: </span>@blog.CreatedAt</li>
                                    </ul>
                                    <a asp-controller="blog" asp-action="Detail"  asp-route-id="@blog.Id" class="read-more">Read More...</a>
                                </div>
                            </div>
                        }
                        <!-- blog single item start -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- latest blog area end -->
    <!-- brand area start -->
    <div class="brand-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="brand-active-carousel">
                        @foreach (Brand brand in Model.Brands)
                        {
                            <div class="brand-item">
                                <a href="#">
                                    <img src="~/user/assets/img/brand/@brand.ImageUrl" alt="brand image">
                                </a>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- brand area end -->
</main>
<!-- main wrapper end -->

