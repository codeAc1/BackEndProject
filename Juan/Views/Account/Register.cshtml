@model RegisterVM
@{
    ViewData["Title"] = "Register";
}

<main>
    <!-- breadcrumb area start -->
    <div class="breadcrumb-area bg-img" data-bg="assets/img/banner/breadcrumb-banner.jpg">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="breadcrumb-wrap text-center">
                        <nav aria-label="breadcrumb">
                            <h1 class="breadcrumb-title">Register</h1>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Register</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end -->
    <!-- login register wrapper start -->
    <div class="login-register-wrapper section-padding">
        <div class="container">
            <div class="member-area-from-wrap">
                <div class="row justify-content-center">
                    <!-- Register Content Start -->
                    <div class="col-lg-6">
                        <div class="login-reg-form-wrap signup-form">
                            <h2>Singup Form</h2>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <form method="post">
                                <div class="single-input-item">
                                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter Name...">
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="SurName" class="form-control form-control-lg" placeholder="Enter Surname...">
                                    <span asp-validation-for="SurName" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Enter Email..">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="single-input-item">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="Enter UserName..">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>

                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="single-input-item">
                                            <input asp-for="Password" class="form-control form-control-lg" placeholder="Enter Password...">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="single-input-item">
                                            <input asp-for="CheckPassword" class="form-control form-control-lg" placeholder="Enter Re-Password..">
                                            <span asp-validation-for="CheckPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <div class="login-reg-form-meta">
                                        <div class="remember-meta">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" class="custom-control-input" id="subnewsletter">
                                                <label class="custom-control-label" for="subnewsletter">Subscribe Our Newsletter</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="single-input-item">
                                    <button type="submit" class="btn">Register</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- Register Content End -->
                </div>
            </div>
        </div>
    </div>
    <!-- login register wrapper end -->
</main>

