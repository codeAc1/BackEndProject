@model Setting
@{ ViewData["Title"] = "Update"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Setting Update</h1>
    </div>
    <div class="col-lg-12 text-center">
        <img style="max-width:10%" src="~/user/assets/img/logo/@Model.Logo" alt="Alternate Text" />
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="LogoImage"></label>
                <input class="form-control" accept="image/png" asp-for="LogoImage" placeholder="Enter ProductImagesFile">
                <span class="text-danger"  asp-validation-for="LogoImage"></span>
            </div>
            <div class="form-group">
                <label asp-for="WelcomeMessage"></label>
                <input asp-for="WelcomeMessage" class="form-control" placeholder="Enter Welcome Text ...">
                <span class="text-danger" asp-validation-for="WelcomeMessage"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form-control" placeholder="Enter Phone ...">
                <span class="text-danger" asp-validation-for="Phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter Email ...">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" placeholder="Enter Address ...">
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkingHours"></label>
                <input asp-for="WorkingHours" class="form-control" placeholder="Enter WorkDay ...">
                <span class="text-danger" asp-validation-for="WorkingHours"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactUsDesc"></label>
                <textarea asp-for="ContactUsDesc"></textarea>
                <span class="text-danger" asp-validation-for="ContactUsDesc"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <a class="btn btn-danger" asp-area="Admin" asp-controller="Setting" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial.cshtml" />
    <script src="https://cdn.ckeditor.com/ckeditor5/33.0.0/classic/ckeditor.js"></script>
    <script>ClassicEditor
    .create(document.querySelector('#ContactUsDesc'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>
}

