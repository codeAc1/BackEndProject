@model Blog
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-lg-12">
        <h1>Create Product</h1>
    </div>
</div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<div class="row justify-content-lg-center">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label asp-for="Title"></label>
                <input class="form-control" asp-for="Title" placeholder="Enter Title">
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile"></label>
                <input class="form-control" accept="image/jpeg" asp-for="ImageFile" placeholder="Enter MainImage">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>

            <div class="form-group">
                <label asp-for="TagIds"></label>
                <select class="form-control" asp-for="TagIds" asp-items="@new SelectList(ViewBag.Tags, nameof(Tag.Id), nameof(Tag.Name))">
                    <option value="">Choose...</option>
                </select>
                <span class="text-danger" asp-validation-for="TagIds"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select class="form-control" asp-for="CategoryId" asp-items="@new SelectList(ViewBag.Categories, nameof(Category.Id), nameof(Category.Name))">
                    <option value="" selected>Choose...</option>
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainDes"></label>
                <textarea asp-for="MainDes"></textarea>
                <span class="text-danger" asp-validation-for="MainDes"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc"></label>
                <textarea asp-for="Desc"></textarea>
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
        <a class="btn btn-primary" asp-action="Index">Go To List</a>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial.cshtml" />
    <script src="https://cdn.ckeditor.com/ckeditor5/33.0.0/classic/ckeditor.js"></script>
    <script>ClassicEditor
    .create(document.querySelector('#MainDes'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>
    <script>
    ClassicEditor
        .create(document.querySelector('#Desc'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>
}

