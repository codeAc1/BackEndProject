@model Slider
@{ ViewData["Title"] = "Update"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Setting Update</h1>
    </div>
    <div class="col-lg-12 text-center">
        <img style="max-width:50%" src="~/user/assets/img/slider/@Model.ImageUrl" alt="Alternate Text" />
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input class="form-control" accept="image/jpeg" asp-for="Photo">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlideSubtitle"></label>
                <input asp-for="SlideSubtitle" class="form-control" placeholder="Enter Welcome Text ...">
                <span class="text-danger" asp-validation-for="SlideSubtitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlideTitle"></label>
                <input asp-for="SlideTitle" class="form-control" placeholder="Enter Phone ...">
                <span class="text-danger" asp-validation-for="SlideTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="SlideDesc"></label>
                <input asp-for="SlideDesc" class="form-control" placeholder="Enter description...">
                <span class="text-danger" asp-validation-for="SlideDesc"></span>
            </div>
            <button type="submit" class="btn btn-success">Update</button>
            <a class="btn btn-danger" asp-area="Admin" asp-controller="Slider" asp-action="Index">Cancel</a>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial.cshtml" />
    <script src="https://cdn.ckeditor.com/ckeditor5/33.0.0/classic/ckeditor.js"></script>
   
}



