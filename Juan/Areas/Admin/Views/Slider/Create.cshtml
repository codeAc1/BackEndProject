@model Slider;
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Slider</h4>

                <form class="forms-sample" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label asp-for="Photo"></label>
                        <input id="formFile" asp-for="Photo" accept="image/*" class="form-control">
                        <span class="text-danger" asp-validation-for="Photo"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlideSubtitle"></label>
                        <input asp-for="SlideSubtitle" class="form-control" placeholder="Enter Subtitle...">
                        <span class="text-danger" asp-validation-for="SlideSubtitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlideTitle"></label>
                        <input asp-for="SlideTitle" class="form-control" placeholder="Enter title...">
                        <span class="text-danger" asp-validation-for="SlideTitle"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SlideDesc"></label>
                        <textarea asp-for="SlideDesc" class="form-control" placeholder="Enter description..."></textarea>
                        <span class="text-danger" asp-validation-for="SlideDesc"></span>
                    </div>



                    <button type="submit" class="btn btn-primary mr-2">Create</button>
                    <a class="btn btn-light" asp-area="Admin" asp-controller="Slider" asp-action="Index">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Script
{
    <partial name="_ValidationPartial.cshtml" />
    <script src="https://cdn.ckeditor.com/ckeditor5/33.0.0/classic/ckeditor.js"></script>
    <script>ClassicEditor
    .create(document.querySelector('#SlideDesc'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });</script>

}

