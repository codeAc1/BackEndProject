@model Slider
@{ ViewData["Title"] = "Detail"; }

<div class="row">
    <div class="col-lg-12 h3 mb-4 text-gray-800">
        <h1>Setting Detail</h1>
    </div>
    <div class="col-lg-6 mx-auto">
        <div class="card mb-3">
            <div class="card-img-top text-center py-3">
                <h5 class="card-title font-weight-bold">Slide Image</h5>
                <img class="card-img-top" style="max-width:50%; object-fit:contain" src="~/user/assets/img/Slider/@Model.ImageUrl" alt="Card image cap">
            </div>
            <div class="card-body">
                <hr />
                <h5 class="card-title font-weight-bold">Slide Title</h5>
                <p>@Model.SlideTitle</p>
                <hr />
                <h5 class="card-title font-weight-bold">Slide Sub Title</h5>
                <p>@Model.SlideSubtitle</p>
                <hr />
                <h5 class="card-title font-weight-bold">Slide Description</h5>
                @Html.Raw(Model.SlideDesc)

            </div>


            <div class="card-footer d-flex justify-content-between p-3 ">
                <a asp-action="Index" class="btn btn-primary">Go Back</a>
                <form method="post" asp-action="DeletePost" asp-route-id="@Model.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
        
    </div>
</div>

