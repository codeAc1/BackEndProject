@model Category
@{ ViewData["Title"] = "Create"; }

<div class="row">
    <div class="col-lg-6 h3 mb-4 text-gray-800">
        <h1>Category Create</h1>
    </div>
    <div class="col-lg-12 mx-auto">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter Category name...">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <button type="submit" class="btn btn-primary">Create Color</button>
        </form>
    </div>
</div>

@section Script{
    <partial name="_ValidationPartial">
}


